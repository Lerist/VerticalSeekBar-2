<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zgs="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <safe.highwin.zgs.verticalbar.VerticalSeekBar
        android:id="@+id/vsb"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:max="100"
        android:progress="50"
        zgs:bgEndColor="#000000"
        zgs:bgStartColor="#000000"
        zgs:progressBgEndColor="#00ff00"
        zgs:progressBgStartColor="#ffffff"
        zgs:borderColor ="#fff000"
        zgs:thumbBg="@mipmap/thumb" />
</RelativeLayout>